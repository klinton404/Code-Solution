#include<bits/stdc++.h>

#define all(x) x.begin(), x.end()
#define all_g(x) x.rbegin(), x.rend()
#define Faster ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);

using namespace std;

using ll = long long;
const int N = 1e5 + 10;

void solve()
{
    int x, k;
    cin>>x>>k;

    if(x%k==0)
    {
        cout<<2<<"\n"<<x-1<<" "<<1<<"\n";
    }

    else if(k>x || x%k != 0)
    {
        cout<<1<<"\n"<<x<<"\n";
    }
}


int main()
{
    Faster;
    int t;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

