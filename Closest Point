#include<bits/stdc++.h>

#define pb push_back
#define ll long long int
#define no cout<<"NO"<<"\n"
#define yes cout<<"YES"<<"\n"
#define all(x) x.begin(), x.end()
#define Faster ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);


using namespace std;
const int N = 1e5 + 10;


void solve()
{
    ll n, count = 0;
    cin>>n;
    ll arr[n];
    for(int i=0; i<n; i++)
    {
        cin>>arr[i];
    }
    if(n==2)
    {
        ll dif = abs(arr[1]-arr[0]);
        if(dif>=2)
        {
            yes;
        }
        else
        {
            no;
        }
    }
    else no;
}





int main()
{
    Faster;

    int t;
    cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}

